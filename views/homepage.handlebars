{{#each posts as |post|}}
<div class="card">
  <div class="card-header text-center">
    <h1>{{post.post_title}}</h1>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{post.contents}}.</p>
      <footer class="blockquote-footer">Posted by: {{post.creator_name}}, {{post.date_created}} </footer>
    </blockquote>
  </div>
</div>
{{/each}}
