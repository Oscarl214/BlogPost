<div class="card">
  <div class="card-header text-center text-dark" >
    <h1>{{post.post_title}}</h1>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p class="contentssize">{{post.contents}}.</p>
      <footer class="blockquote-footer">Posted by:
        {{post.creator_name}},
        {{post.date_created}}
      </footer>
    </blockquote>
  </div>
</div>

<div class="mb-3">
  <label for="exampleFormControlTextarea1" class="form-label">Add A Comment!</label>
  <input type="text" class="form-control" id="comment" />
</div>
<div>
  <button
    type="button"
    class="btn btn-outline-secondary"
    id="comment-btn"
    data-postId="{{post.id}}"
  >Submit</button>
</div>

<div>
<br>
  <div class="card" id="cardunder">
    <div class="card-header text-center">
      <h1>Comments</h1>
    </div>
    {{#each post.comments as |comment|}}
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p class="contentssize">{{comment.comment}}</p>
          <footer class="blockquote-footer">Posted by:
            {{creator_name}},
            {{date_created}}
          </footer>
        </blockquote>
      </div>
    {{/each}}
  </div>

</div>

<script src="/js/createComments.js"></script>