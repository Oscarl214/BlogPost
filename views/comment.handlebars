{{#each posts}}
  <div class="card">
    <div class="card-header text-center">
      <h1>{{post_title}}</h1>
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p>{{contents}}.</p>
        <footer class="blockquote-footer">Posted by:
          {{creator_name}},
          {{date_created}}
        </footer>
      </blockquote>
    </div>
  </div>
  {{/each}}
  <div>Comment Section</div>
  <div class="mb-3">
  <label for="exampleFormControlTextarea1" class="form-label">Add A Comment!</label>
  <input type="text" class="form-control" id="edittitle" />
</div>
<div>
  <button
    type="button"
    class="btn btn-outline-secondary"
    id="comment"
    {{!-- data-postId="{{postId}}" --}}
  >Comment</button>
