<div class="card">
  <div class="card-header text-center">
    <h1>{{post_title}}</h1>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{contents}}.</p>
      <footer class="blockquote-footer">Posted by:
        {{creator_name}},
        {{date_created}}
      </footer>
    </blockquote>
  </div>
</div>

<div class="mb-3">
  <label for="exampleFormControlTextarea1" class="form-label">Add A Comment!</label>
  <input type="text" class="form-control" id="comment" />
</div>
<div>
  <button
    type="button"
    class="btn btn-outline-secondary"
    id="comment-btn"
    data-postId="{{post.id}}"
  >Comment</button>
</div>

<div>
  <h2>Comment Section</h2>

  <div class="card">
    <div class="card-header text-center">
      <h1>Comment</h1>
    </div>
      {{#each comments}}
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p>{{comment}}.</p>
        <footer class="blockquote-footer">Posted by:
          {{creator_name}},
          {{date_created}}
        </footer>
      </blockquote>
    </div>
      {{/each}}
  </div>

</div>

<script src="/js/createComments.js"></script>









