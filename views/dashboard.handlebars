
{{#each user.posts as |post|}}
<a href="/editpost/{{post.id}}" class="anchor"> 
<div class="card text-dark">
  <div class="card-header text-center bg-info text-light">
    <h1>{{post.post_title}}</h1>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p class="contentssize">{{post.contents}}</p>
      <footer class="blockquote-footer">Posted by: {{post.creator_name}}, {{post.date_created}}</footer>
    </blockquote>
  </div>
</div>
</a>
{{/each}}
<div class="text-center">
    <a href="/createpost"><button type="button" class="btn btn-outline-secondary">CreatePost</button></a>
</div>

