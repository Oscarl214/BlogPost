{{#each user.posts as |post|}}
<a href="/editpost/{{post.id}}">
<div class="card">
  <div class="card-header text-center">
    <h1>{{post.post_title}}</h1>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{post.contents}}.</p>
      <footer class="blockquote-footer">Posted by: {{post.creator_name}}, {{post.date_created}}</footer>
    </blockquote>
  </div>
</div>
</a>
{{/each}}
<div >
    <a href="/createpost"><button type="button" class="btn btn-outline-secondary">CreatePost</button></a>
</div>

